        "# ==================================\n",
        "# STEP 1: Install Required Libraries\n",
        "# ==================================\n",
        "!pip install --quiet librosa openpyxl\n",
        "\n",
        "# ==================================\n",
        "# STEP 2: Import Libraries\n",
        "# ==================================\n",
        "import os\n",
        "import numpy as np\n",
        "import librosa\n",
        "import pandas as pd\n",
        "import pywt\n",
        "from scipy.stats import entropy\n",
        "\n",
        "# ==================================\n",
        "# STEP 3: Mount Google Drive\n",
        "# ==================================\n",
        "from google.colab import drive\n",
        "drive.mount('/content/drive')\n",
        "\n",
        "# ==================================\n",
        "# STEP 4: Define Paths for 25 Audio Files\n",
        "# ==================================\n",
        "file_paths = []\n",
        "for i in range(1, 61):\n",
        "    path = f\"/content/drive/MyDrive/D{i}.wav\"\n",
        "    if os.path.exists(path):\n",
        "        file_paths.append(path)\n",
        "    else:\n",
        "        print(f\"⚠ Skipping missing file: {path}\")\n",
        "\n",
        "print(f\"✅ Found {len(file_paths)} audio files\")\n",
        "\n",
        "# ==================================\n",
        "# STEP 5: Feature Extraction Functions\n",
        "# ==================================\n",
        "def calculate_entropy(signal):\n",
        "    \"\"\" Shannon entropy from histogram \"\"\"\n",
        "    hist, _ = np.histogram(signal, bins=50, density=True)\n",
        "    hist = hist[hist > 0]  # remove zeros\n",
        "    return entropy(hist)\n",
        "\n",
        "def process_file(file_path, duration=3, max_level=5):\n",
        "    \"\"\"Process one audio file and extract features\"\"\"\n",
        "    print(f\"🔍 Processing {file_path} ...\")\n",
        "\n",
        "    # Load first 3 seconds of audio\n",
        "    signal, sr = librosa.load(file_path, sr=None, duration=duration)\n",
        "\n",
        "    # Wavelet Decomposition (db4 wavelet)\n",
        "    coeffs = pywt.wavedec(signal, 'db4', level=max_level)\n",
        "\n",
        "    # Extract entropy features for each level\n",
        "    features = {}\n",
        "    for i, c in enumerate(coeffs):\n",
        "        features[f\"Level{i+1}_Entropy\"] = calculate_entropy(c)\n",
        "        features[f\"Level{i+1}_ShannonEntropy\"] = -np.sum(c * np.log(np.abs(c) + 1e-12))\n",
        "\n",
        "    return features\n",
        "\n",
        "# ==================================\n",
        "# STEP 6: Process All Files\n",
        "# ==================================\n",
        "results = []\n",
        "for file_path in file_paths:\n",
        "    try:\n",
        "        features = process_file(file_path)\n",
        "        features[\"File\"] = os.path.basename(file_path)\n",
        "        results.append(features)\n",
        "    except Exception as e:\n",
        "        print(f\"❌ Error processing {file_path}: {e}\")\n",
        "\n",
        "# ==================================\n",
        "# STEP 7: Save to Excel\n",
        "# ==================================\n",
        "df = pd.DataFrame(results)\n",
        "output_path = \"/content/drive/MyDrive/Wavelet_entropy_features.xlsx\"\n",
        "df.to_excel(output_path, index=False)\n",
        "\n",
        "print(f\"\\n✅ Feature extraction completed! Results saved to {output_path}\")"
      ]
    }
